<project  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.rchemist</groupId>
    <artifactId>rcm-platform-bom</artifactId>
    <version>0.0.2-SNAPSHOT</version>
  </parent>

  <groupId>io.rchemist</groupId>
  <packaging>jar</packaging>
  <artifactId>common-extension-manager</artifactId>
  <version>0.0.2-SNAPSHOT</version>
  <name>RCM ExtensionManager</name>
  <description>Rchemist Common modules :: extension manager</description>
  <properties>
    <java.version>11</java.version>
    <project.version>0.0.2-SNAPSHOT</project.version>
    <lombok.version>1.18.20</lombok.version>
    <apache.commons.io.version>2.11.0</apache.commons.io.version>
    <apache.commons.collections4.version>4.3</apache.commons.collections4.version>
    <apache.commons.beanutils.version>1.9.3</apache.commons.beanutils.version>
    <apache.commons.math.version>3.6.1</apache.commons.math.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <useSystemClassLoader>true</useSystemClassLoader>
          <forkMode>always</forkMode>
          <skip>false</skip><skipTests>true</skipTests>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.2.0</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>verify</phase>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.0</version>
        <configuration>
          <verbose>true</verbose>
          <fork>true</fork>
          <compilerVersion>11</compilerVersion>
          <forceJavacCompilerUse>true</forceJavacCompilerUse></configuration>
      </plugin>
    </plugins>
  </build>

  <distributionManagement>
    <repository>
      <id>release</id>
      <url>https://github.com/rchemist/release-micro/raw/main/releases</url>
    </repository>

    <snapshotRepository>
      <id>snapshot</id>
      <url>https://github.com/rchemist/release-micro/raw/main/snapshots</url>
    </snapshotRepository>
  </distributionManagement>


</project>